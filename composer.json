{
    "name": "edmondscommerce/behat-magento-one-context",
    "description": "A Behat Extension to use with Magento 1.x",
    "keywords": [
        "Behat",
        "Testing",
        "Logging",
        "Magento",
        "Magento 1"
    ],
    "homepage": "https://www.edmondscommerce.co.uk",
    "license": "MIT",
    "authors": [
        {
            "name": "edmondscommerce",
            "email": "info@edmondscommerce.co.uk"
        }
    ],
    "require": {
        "behat/behat": "~3.0",
        "edmondscommerce/behat-html-context": "dev-master",
        "edmondscommerce/behat-javascript-context": "dev-master",
        "edmondscommerce/behat-screenshot-context": "dev-master"
    },
    "require-dev": {
        "edmondscommerce/phpqa": "dev-master",
        "edmondscommerce/mock-server": "dev-master@dev",
        "behat/mink-selenium2-driver": "^1.3@dev",
        "edmondscommerce/selenium-server": "dev-master"
    },
    "config": {
        "bin-dir": "bin"
    },
    "autoload": {
        "psr-4": {
            "EdmondsCommerce\\BehatMagentoOneContext\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "EdmondsCommerce\\BehatMagentoOneContext\\": "tests/"
        }
    }
}
